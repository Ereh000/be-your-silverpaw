<footer class="footer-v2" id="footer-v2-{{ section.id }}">
  <div class="page-width">
    <div class="footer-v2__container">
      <div class="footer-v2__row">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'social' %}
              <div class="footer-v2__column footer-v2__column--social" {{ block.shopify_attributes }}>
                <h2 class="footer-v2__heading">{{ block.settings.heading }}</h2>

                <ul class="footer-v2__social-list">
                  {%- if settings.social_facebook_link != blank -%}
                    <li class="footer-v2__social-item">
                      <a
                        href="{{ settings.social_facebook_link }}"
                        class="footer-v2__social-link"
                        target="_blank"
                        aria-label="Facebook"
                      >
                        <svg
                          aria-hidden="true"
                          focusable="false"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
