      "default": "Create Account"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success Message",
      "default": "Your account has been created successfully!"
    }
  ],
  "presets": [
    {
      "name": "Popup Signup Form"
    }
  ]
}
