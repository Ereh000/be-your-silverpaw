      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Create an Account"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Sign up to get access to exclusive offers and track your orders."
    },
    {
      "type": "text",
      "id": "button_text",
